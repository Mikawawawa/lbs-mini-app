/**index.wxss**/
.main {
  min-height: 100vh;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.activities {
  width: calc(100vw - 48rpx);
  margin-bottom: 48rpx;
  margin-top: 32rpx;
  flex: 1;
}

.activity {
  margin-top: 48rpx;
}

.activity-title {
  font-size: larger;
}

.activity-header {
  display: flex;
  justify-content: space-between;
  font-size: x-small;
  color: gray;
}

.activity-content {
  margin-top: 32rpx;
  color: #333333;
  font-size: smaller;
}

.activity-images {
  margin-top: 32rpx;
}
.activity-image {
  width: calc((100vw - 48rpx) / 3);
  height: calc((100vw - 48rpx) / 3)
}

.mailbox {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: calc(100vw - 48rpx);
  margin-top: 32rpx;
}

.empty {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}

.picked {
  color: red
}

.topick {
  color: darkcyan
}